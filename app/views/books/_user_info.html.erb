    <p id="notice"></p>
      <div class="container px-5 px-sm-0">
        <div class="row">
          <div class="col-md-3">

            <h2>User info</h2>
            <%= image_tag current_user.get_profile_image(100,100) %>
            <table class="table">
              <tbody>
                <tr></tr>
                <tr>
                  <th>name</th>
                  <th><%= current_user.name %></th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th><%= current_user.introduction %></th>
                </tr>
              </tbody>
            </table>

            <div class="row">
              <a class="btn btn-outline-secoundary btn-block edit_user_path" href="/users/<%= current_user.id %>/edit">
              <i class="fas fa-user-cog"></i>
              </a>
            </div>

            <h2 class="mt-3">New book</h2>
            <%= form_with model:Book.new,url: '/books', method: :post do |f| %>

            <div class="form-group">
              <label for="book_title">Title</label>
              <%= f.text_field :title %>
            </div>

            <div class="form-group">
              <label for="book_opinion">Opinion</label>
              <%= f.text_area :body %>
            </div>

            <div class="form-group">
             <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book" >
            </div>
            <% end %>

          </div>
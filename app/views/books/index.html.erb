

  <main>
    <!--テンプレート-->
    <%= render 'user_info' %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <td></td>
              <td>Title</td>
              <td>Opinion</td>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><a href="/users/<%= @user.id %>">
                <%= image_tag @user.get_profile_image(80,80) %></a>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>

              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </main>









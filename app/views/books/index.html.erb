
<body>
  <main>
    <% if @book.errors.any? %>
      <%= @book.errors.count %>errors prohibited this obj from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

<!--テンプレート-->
    <%= render 'user_info', user: @user %>

          <div class="col-md-8" offset-md-1>
            <h2>Books</h2>
              <table class="table table-hover table-inverse">
                <thead>
                  <tr>
                    <td></td>
                    <td>Title</td>
                    <td>Opinion</td>
                    <td colspan="3"></td>
                  </tr>
                </thead>

                <tbody>
                  <% @books.each do |book| %>
                  <tr>
                    <td><a href="/users/<%= @user.id %>">
                      <%= image_tag @user.get_profile_image(100,100) %></a>
                    </td>
                    <td><%= link_to book.title, book_path(book.id) %></td>

                    <td><%= book.body %></td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
          </div>
        </div>
      </div>
  </main>
</body>



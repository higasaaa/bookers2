<!--message-->
<main>
    <p id="notice"></p>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-mb-8 col-lg-5 px-5 px-sm-0 mx-auto">

          <h1>Editing Book</h1>
          <div id="error_explanation">
            <% if @book.errors.any? %>
          <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
            <% end %>
          </div>

            <form action="/books/<%= @book.id %>" accept-charset="UTF-8" method="post" >
            <%= form_with model: @book do |f| %>

              <div class="form-group">
               <label for="book_title">Title</label>
               <input class="form-control book_title" type="text"name="book[title]" id="book_title" >
              </div>

              <div>
               <label for="book_title">Opinion</label>
               <textarea class="form-control book_body" type="text"name="book[body]" id="book_body" ></textarea>
              </div>

              <div class="form-group">
                <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">
              </div>
            </form>

            <%= link_to "Edit", edit_book_path(@book.id) %> |
            <%= link_to "Back", book_path(@book.id) %>
          <% end %>
          </div>
        </div>
      </div>
    </div>
</main>

<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
　　<div class="flash-notifications">
      <% flash.each do |key, value| %>
       <%= content_tag(:div, value, class: key) %>
      <% end %>
    </div>
        <div class="row">
      <!--テンプレート-->
      <%= render 'user_info', book: @book, user: @user %>
      <!--<p id="notice"></p>-->

          <!--<div class="col-md-3">-->

      <div class="col-mb-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= image_tag @user.get_profile_image(100,100) %><br>
                <%=link_to @user.name, user_path(@user.id) %>
              </td>
              <td>
                <%= link_to @book.title, book_path(@book.id) %>
              </td>
              <td><%= @book.body %></td>
              <td>
                <% if @book.user == current_user %>
                <a class="btn btn-sm btn-success edit_book_path" href="/books/<%= @book.id %>/edit">Edit</a> <!--Edit飛ばない-->
                <% end %>
              </td>
              <td>
                <% if @book.user == current_user %>
                <a data-confirm="本当に消しますか？" class="btn btn-sm btn-danger destroy_book_path" rel="nofollow" data-method="delete" href="/books/<%= @book.id %>">Destroy</a>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
  </div>
</main>







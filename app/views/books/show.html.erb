<!--message-->
  <main>
    <p id="notice"></p>
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <h2>User info</h2>
          <% @user.name %>
          <%= image_tag @user.get_profile_image(100,100) %>

          <table class="table">
            <tbody>
              <tr></tr>
              <tr>
                <th>name</th>
                <th></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th></th>
              </tr>
            </tbody>
          </table>

          <div class="row">
            <a class="btn btn-outline-secoundary btn-block edit_user_path" href="/users/1/edit">
            <i class="fas fa-user-cog"></i>
            </a>
          </div>
          <h2 class="mt-3">New book</h2>
          <%= form_with model:@book,url: '/books', method: :post do |f| %>

          <div class="form-group">
            <label for="book_title">Title</label>
            <%= f.text_field :title %>
          </div>

          <div class="form-group">
            <label for="book_opinion">Opinion</label>
            <%= f.text_area :body %>
          </div>

          <div class="form-group">
            <%= f.submit 'Create Book' %>
          </div>
          <% end %>
        </div>



        <div class="col-mb-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <%= image_tag @user.get_profile_image(100,100) %><br>
                <%=link_to @user.name %>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <td><%= book.body %></td>
              <td>
                <a class="btn btn-sm btn-success edit_book_path" href="/books/<%= book.id %>/edit">Edit</a> <!--Edit飛ばない-->
              </td>
              <td>
                <a data-confirm="本当に消しますか？" class="btn btn-sm btn-danger destroy_book_path" rel="nofollow" data-method="delete" href="/books/<%= book.id %>">Destroy</a>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </main>

















<!--message-->
  <main>

   <div class="flash-notifications">
    <% flash.each do |key, value| %>
     <%= content_tag(:div, value, class: key) %>
    <% end %>

    <%= render 'books/user_info', user: @user %>

        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <% @books.each do |book| %>
                <tr>
                  <td>
                    <a><%= image_tag @user.get_profile_image(80,80) %></a></td>
                  <td><a class="book_id"><%= link_to book.title, book_path(book.id) %></a>
                  </td>
                  <td><%= book.body %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
        </div>
      </div>
    </div>
  </main>




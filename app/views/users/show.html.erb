<!--message-->
  <main>
    
   <div class="flash-notifications">
    <% flash.each do |key, value| %>
     <%= content_tag(:div, value, class: key) %>
    <% end %>
  
    <p id="notice"></p>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
          <h2>User info</h2>
          <%= image_tag @user.get_profile_image(100,100) %>
          <table class="table">
            <tbody>
              <tr></tr>
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
            </tbody>
          </table>

          <div class="row">
            <a class="btn btn-outline-secoundary btn-block edit_user_path" href="/users/<%= @user.id %>/edit">
            <i class="fas fa-user-cog"></i>
            </a>
          </div>

          <h2 class="mt-3">New book</h2>
          <%= form_with model:@book,url: '/books', method: :post do |f| %>

          <div class="form-group">
              <label for="book_title">Title</label>
              <%= f.text_field :title %>
            </div>

          <div class="form-group">
              <label for="book_opinion">Opinion</label>
              <%= f.text_area :body %>
            </div>

          <div class="form-group">
            <%= f.submit 'Create Book' %>
          </div>
          <% end %>
        </div>

        <div class="col-md-8" offset-md-1>
          <h2>Books</h2>
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <% @books.each do |book| %>
                <tr>
                  <td>
                    <a><%= image_tag @user.get_profile_image(100,100) %></a></td>
                  <td><a class="book_id"><%= link_to book.title, book_path(book.id) %></a>
                  </td>
                  <td><%= book.body %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
        </div>
      </div>
    </div>
  </main>



